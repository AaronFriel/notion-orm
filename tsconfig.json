{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "ES6",                                 
    "lib": ["es6"],                                      
    "module": "commonjs",                                
    "rootDir": "src",                                    
    "resolveJsonModule": true,                           
    "allowJs": true,                                     
    "outDir": "build",                                    
    "esModuleInterop": true,                             
    "strict": true,      
    "baseUrl": "src",                                
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@notion-database/*":["databases/*"]
    }                               
  },
  "include": ["src"]
}


